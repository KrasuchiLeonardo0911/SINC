<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.SINC</item>
    </style>

    <style name="Theme.SINC" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/bordeaux</item>
        <item name="android:colorPrimaryDark">@color/bordeaux</item>
        <item name="android:colorAccent">@color/bordeaux</item>
    </style>
</resources>